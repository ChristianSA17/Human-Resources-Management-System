<UserControl x:Class="Human_Resources_Management_System.UserControls.ApplicationForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_Resources_Management_System.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1"/>
            <RowDefinition Height="2*" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#3B3B3B" >

            <Border>
                <StackPanel>
                    <TextBlock FontSize="20" Margin="20,0,0,0" Foreground="LightGray">Application Form</TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Background="LightGray"/>

        <Grid Grid.Row="2" Background="#3B3B3B" >


            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
                <TextBlock  Foreground="LightGray" FontSize="14">First Name <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsFirstName" Foreground="LightGray" Background="Transparent" Width="190" Height="20"/>
            </StackPanel>

            <!-- Surname TextBox -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,11,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray"> Surname <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsSurname" Foreground="LightGray" Background="Transparent" Width="190" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="433,10,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray"> Middle Name <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsMiddleName"  Foreground="LightGray" Background="Transparent" Width="190" Height="20" />
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,10,0,0">
                <TextBlock Foreground="LightGray">Sex<Span Foreground="Red">*</Span></TextBlock>
                <ComboBox x:Name="ApplicantsSex" Width="90" Height="22" >
                    <ComboBoxItem Content="Male" />
                    <ComboBoxItem Content="Female" />
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0">
                <TextBlock Foreground="LightGray">Date of Birth<Span Foreground="Red">*</Span></TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox x:Name="BirthDateTextBox" Foreground="LightGray" Background="Transparent" Width="150" Height="30"/>

                    <!-- Button with Calendar Icon -->
                    <Button Width="40" Height="30" Margin="0,0,0,0" Click="ShowCalendar_Click">
                        <Image Width="20" Height="20" Source="C:\Users\lenovo\source\repos\Human Resources Management System\Human Resources Management System\Images\Calendar-Icon.png"/>
                    </Button>

                    <!-- Popup for Calendar -->
                    <Popup Name="CalendarPopup" Placement="Bottom" PlacementTarget="{Binding ElementName=ApplicantsBirthday}" StaysOpen="False">
                        <Calendar x:Name="BirthDateCalendar" SelectedDatesChanged="BirthDateCalendar_SelectedDateChanged"/>
                    </Popup>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="220,55,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Age <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsAge" Foreground="LightGray" Background="Transparent" Width="50" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="287,54,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Email <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsEmail" Foreground="LightGray" Background="Transparent" Width="200" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="516,54,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Address <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsAddress" Foreground="LightGray" Background="Transparent" Width="200" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,100,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Contact No. <Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsContactNo" Foreground="LightGray" Background="Transparent" Width="180" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="210,100,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Requirements <Span Foreground="red">*</Span></TextBlock>
                <ComboBox x:Name="ApplicantsRequirements" Width="200" Height="22" >
                    <ComboBoxItem Foreground="LightGray">Complete</ComboBoxItem>
                    <ComboBoxItem Foreground="LightGray">Incomplete</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="433,96,0,0">
                <TextBlock Foreground="LightGray">Date Hired<Span Foreground="Red">*</Span></TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox x:Name="HiredDateTextBox" Foreground="LightGray" Background="Transparent" Width="150" Height="30" />

                    <!-- Button with Calendar Icon -->
                    <Button Width="40" Height="30" Margin="0,0,0,0" Click="ShowDateHired_Click">
                        <Image Width="20" Height="20" Source="C:\Users\lenovo\source\repos\Human Resources Management System\Human Resources Management System\Images\Calendar-Icon.png"/>
                    </Button>

                    <!-- Popup for Calendar -->
                    <Popup Name="HiredDatePopup" Placement="Bottom" PlacementTarget="{Binding ElementName=ApplicantsDateHired}" StaysOpen="False">
                        <Calendar x:Name="HiredDate" SelectedDatesChanged="Hired_SelectedDateChanged"/>
                    </Popup>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,100,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Shuttle Code<Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="ApplicantsShuttleCode" Foreground="LightGray" Background="Transparent" Width="100" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,150,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Applicant's Signature<Span Foreground="red">*</Span></TextBlock>
                <Button Height="20" Click="OpenSignature_Click" >GET YOUR SIGNATURE</Button>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="170,150,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Authorized Signatory<Span Foreground="red">*</Span></TextBlock>
                <Button Height="20" Click="AuthoritySig_Click" >GET YOUR SIGNATURE</Button>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,216,0,0">
                <TextBlock FontSize="15" Foreground="LightGray">Emergency Contact</TextBlock>
                <TextBlock  FontSize="14" Foreground="LightGray">First Name<Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="EmergencyContactName" Foreground="LightGray" Background="Transparent" Width="150" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,280,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Contact No.<Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="EmergencyContactNo" Foreground="LightGray" Background="Transparent" Width="150" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,242,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Surname<Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="EmergencyContactSurname" Foreground="LightGray" Background="Transparent" Width="150" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,280,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Address</TextBlock>
                <TextBox x:Name="EmergencyContactAddress" Foreground="LightGray" Background="Transparent" Width="150" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,242,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Middle Initial<Span Foreground="red">*</Span></TextBlock>
                <TextBox x:Name="EmergencyContactMiddleName" Foreground="LightGray" Background="Transparent" Width="100" Height="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,280,0,0">
                <TextBlock  FontSize="14" Foreground="LightGray">Sex<Span Foreground="red">*</Span></TextBlock>
                <ComboBox x:Name="EmergencyContactSex"  Width="100" Height="22" >
                    <ComboBoxItem Foreground="LightGray">Male</ComboBoxItem>
                    <ComboBoxItem Foreground="LightGray">Female</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,15,136,0" >
                <Border Height="190" Width="200" Background="LightGray" CornerRadius="5"  BorderBrush="Black" BorderThickness="1">
                    <Image x:Name="UploadedImage" Stretch="Uniform" />
                </Border>

                <!-- Upload Button -->
                <Button Content="Upload Image" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="100" Click="FormUploadButton_Click" Background="#141414" Foreground="LightGray"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,40,50" Grid.ColumnSpan="2">

                <Button Margin="0,0,20,0" Background="#141414" Height="25" Click="OpenEditForm_Click" Foreground="LightGray">Edit Form</Button>
                <Button Margin="0,0,0,0" Height="25" Foreground="LightGray" Background="#141414" Click="ConfirmApplicationButton_Click">Confirm</Button>
            </StackPanel>






        </Grid>

    </Grid>
</UserControl>
