<UserControl x:Class="Human_Resources_Management_System.UserControls.Payroll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_Resources_Management_System.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#3B3B3B">
            <TextBlock FontSize="20" Margin="30,0,0,0" Foreground="LightGray">Payroll</TextBlock>
        </Grid>
        <Grid Grid.Row="1" Background="LightGray"/>
        <Grid Grid.Row="2" Background="#3B3B3B">
            <StackPanel Background="DarkGray" Height="60" Width="620" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,10,0,0" >
                <TextBox x:Name="SearchTextBox" 
                 Width="520" Margin="10"
                 Text="🔍 Seacrh employee"
                 TextChanged='SearchTextBox_TextChanged'
                 Background="#3B3B3B"
                 Foreground="white"
                 Height="40"
                 FontSize="20"
                 Padding="10,5,0,0"
                 
                 
                 />
            </StackPanel>
            <ListView x:Name="ListViewUsers" Margin="10,10,229,10" Background="#3B3B3B" Foreground="White" Height="400" Width="800">
                <ListView.Resources>
                    <!-- Style for ListViewItem -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#141414"/>
                                <!-- Selected row background color -->
                                <Setter Property="Foreground" Value="White"/>
                                <!-- Optional: Text color for selected row -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Style for GridViewColumnHeader -->
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="DarkGray"/>
                        <!-- Header background color -->
                        <Setter Property="Foreground" Value="White"/>
                        <!-- Header text color -->
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="5,3"/>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <!-- Prevents column reordering -->
                        <GridViewColumn Header="ID No" DisplayMemberBinding="{Binding IdNo}" Width="100"/>
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}" Width="150"/>
                        <GridViewColumn Header="Last Name" DisplayMemberBinding="{Binding LastName}" Width="150"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200"/>
                        <GridViewColumn Header="Pay" DisplayMemberBinding="{Binding Pay}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,154,100,0">
                <StackPanel x:Name="Total_Employee" Orientation="Horizontal">
                    <TextBlock Foreground="LightGray">Total Employee:</TextBlock>
                    <TextBox
                        IsReadOnly="True"
                        Background="Transparent"
                        Width="50"
                        BorderThickness="0"
                        Focusable="False"
                        />


                </StackPanel>
                <StackPanel x:Name="Total_Payroll" Orientation="Horizontal" Margin="0,25,0,0">
                    <TextBlock Foreground="LightGray">Total Payroll:</TextBlock>
                    <TextBox
                        IsReadOnly="True"
                        Background="Transparent"
                         Width="50"
                        BorderThickness="0"
                        Focusable="False"
                        />

                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
