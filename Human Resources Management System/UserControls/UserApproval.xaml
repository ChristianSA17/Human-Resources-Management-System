<UserControl x:Class="Human_Resources_Management_System.UserControls.UserApproval"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_Resources_Management_System.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1" />
            <RowDefinition Height="220" />
            <RowDefinition Height="1" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Foreground="White" FontSize="20">Approval</TextBlock>
        </Grid>
        <Grid Grid.Row="1">
          
        </Grid>
        <Grid Grid.Row="2">
            <!-- ListView -->
            <ListView x:Name="ListViewUsers" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <!-- Email Column -->
                        <GridViewColumn Header="Email" Width="400">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Email}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!-- Approval Column -->
                        <GridViewColumn Header="Approval" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Check Button -->
                                        <Button Width="30" Height="30" Margin="5" ToolTip="Approve">
                                            <Button.Content>
                                                <Image Source="/YourNamespace;component/Resources/check_icon.png" Width="16" Height="16" />
                                            </Button.Content>
                                        </Button>

                                        <!-- Reject Button -->
                                        <Button Width="30" Height="30" Margin="5" ToolTip="Reject">
                                            <Button.Content>
                                                <Image Source="/YourNamespace;component/Resources/cross_icon.png" Width="16" Height="16" />
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid Grid.Row="3"/>
        <Grid Grid.Row="4">
            <TextBlock Text="Approved Items" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
            <ListView x:Name="ListViewApproved" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <!-- Email Column -->
                        <GridViewColumn Header="Email" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Email}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
