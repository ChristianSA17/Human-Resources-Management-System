<UserControl x:Class="Human_Resources_Management_System.UserControls.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Human_Resources_Management_System.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#3B3B3B">
            <TextBlock FontSize="20" Margin="30,0,0,0" Foreground="LightGray">Dashboard</TextBlock>
        </Grid>
        <Grid Grid.Row="1" Background="LightGray"/>
        <Grid Grid.Row="2" Background="#3B3B3B">
            <ListView x:Name="ListViewUsers" Margin="10,10,229,23" Background="#3B3B3B" Foreground="White">
                <ListView.Resources>
                    <!-- Style for ListViewItem -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#141414"/>
                                <!-- Selected row background color -->
                                <Setter Property="Foreground" Value="White"/>
                                <!-- Optional: Text color for selected row -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Style for GridViewColumnHeader -->
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="DarkGray"/>
                        <!-- Header background color -->
                        <Setter Property="Foreground" Value="White"/>
                        <!-- Header text color -->
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="5,3"/>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <!-- Prevents column reordering -->
                        <GridViewColumn Header="First Name" DisplayMemberBinding="{Binding FirstName}"/>
                        <GridViewColumn Header="Surname" DisplayMemberBinding="{Binding Surname}"/>
                        <GridViewColumn Header="Middle Name" DisplayMemberBinding="{Binding MiddleName}"/>
                        <GridViewColumn Header="Sex" DisplayMemberBinding="{Binding Sex}"/>
                        <GridViewColumn Header="Birthday" DisplayMemberBinding="{Binding Birthday,StringFormat=MM-dd-yyyy}"/>
                        <GridViewColumn Header="Age" DisplayMemberBinding="{Binding Age}"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>
                        <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn Header="Contact No" DisplayMemberBinding="{Binding ContactNo}"/>
                        <GridViewColumn Header="Requirements" DisplayMemberBinding="{Binding Requirements}"/>
                        <GridViewColumn Header="Date Hired" DisplayMemberBinding="{Binding DateHired, StringFormat=MM-dd-yyyy}"/>
                        <GridViewColumn Header="Shuttle Code" DisplayMemberBinding="{Binding ShuttleCode}"/>
                        <GridViewColumn Header="Picture">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ProfileImage}" Width="50" Height="50" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Signature">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ApplicantSignature}" Width="50" Height="50" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>



            <Calendar Name="RealTimeCalendar" 
                  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,15,0" Width="190" Background="#141414" BorderBrush="Black"/>
            <Grid Width="200" Height="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,196,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="1" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="#141414">
                    <TextBlock FontSize="20" Margin="30,0,0,0" Foreground="LightGray" >Notes</TextBlock>
                </Grid>
                <Grid Grid.Row="1" Background="LightGray"/>
                <Grid Grid.Row="2" Background="#141414">
                    <TextBox x:Name="NotesTextBox" 
                             Background="Black" 
                             Foreground="LightGray" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             IsReadOnly="True" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="5" />

                </Grid>
            </Grid>
        </Grid>


    </Grid>
</UserControl>
